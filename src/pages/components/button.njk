{% import 'components/icon/icon.njk' as Icon %}

{# Sets the layout to be extended #}
{% extends "layouts/component.njk" %}

{# Sets page-specific variables #}
{% set page = {
  "data": page_component,
  "title": "Button"
} %}

{# Imports components #}
{# import 'components/herovideo/herovideo.njk' as HeroVideo #}
{% import 'components/btn/btn.njk' as Button %}

{% block head_css %}
  <link rel="stylesheet" href="../assets/css/general.bundle.css">
{% endblock %}

{% block content %}
  <div class="">
    <h3 class="zaux-color-set1-black1 p-5">Primary button Dark</h3>
    <div class="zaux-bg-set1-darkgreen p-5">

      <a href="#defaultLink" class="c-btn c-btn1 c-btn--primary-dark c-btn1--size-xl">
          <span class="c-btn__label pe-5">Prova questo button</span>
      </a>

        <br/>
        <br/>

        <a href="#defaultLink" class="c-btn c-btn1 c-btn--primary-dark c-btn1--size-l">
          <span class="c-btn__label pe-3">Prova questo button</span>
        </a>

        <br/>
        <br/>

      <a href="#defaultLink" class="c-btn c-btn1 c-btn--primary-dark c-btn1--size-m">
        <span class="c-btn__label pe-2">Prova questo button</span>
      </a>

        <br/>
        <br/>

      <a href="#defaultLink" class="c-btn c-btn1 c-btn--primary-dark c-btn1--size-s">
        <span class="c-btn__label pe-2">Prova questo button</span>
      </a>

    </div>

    <h3 class="zaux-color-set1-black1 p-5">Primary button Light</h3>
    <div class="zaux-bg-set1-lightblue p-5">

        <br/>
        <br/>

        <a href="#defaultLink" class="c-btn c-btn1  c-btn--primary-light c-btn1--size-l">
          <span class="c-btn__label">Prova questo button L</span>
        </a>

        <br/>
        <br/>

      <a href="#defaultLink" class="c-btn c-btn1  c-btn--primary-light c-btn1--size-m">
        <span class="c-btn__label">Prova questo button M</span>
      </a>

        <br/>
        <br/>

      <a href="#defaultLink" class="c-btn c-btn1  c-btn--primary-light c-btn1--size-s">
        <span class="c-btn__label">Prova questo button S</span>
      </a>

    </div>


    <h3 class=" p-5">Primary button with icon</h3>
    <div class="p-5 zaux-bg-set1-lightblue" style="">

      <a href="#defaultLink" class="c-btn c-btn--primary-light c-btn1 c-btn1--has-icon c-btn1--size-s">
        <span class="c-btn__inner d-flex align-items-center">
          {{
            Icon.content({
              "className": ["c-icon-size-sm"],
              "iconFamily": "icozaux1",
              "iconName": "menu-close"
            })
          }}
          <span class="c-btn__label ps-2">Invia la richiesta</span>
          </span>
              <!-- .c-btn__inner -->
      </a>

        <br/>
        <br/>

        <a href="#defaultLink" class="c-btn c-btn--primary-light c-btn1 c-btn1--has-icon c-btn1--size-m">
        <span class="c-btn__inner d-flex align-items-center">
          {{
            Icon.content({
              "className": ["c-icon-size-md"],
              "iconFamily": "icozaux1",
              "iconName": "menu-close"
            })
          }}
          <span class="c-btn__label ps-2">Invia la richiesta</span>
          </span>
              <!-- .c-btn__inner -->
        </a>

        <br/>
        <br/>

        <a href="#defaultLink" class="c-btn c-btn--primary-light c-btn1 c-btn1--has-icon c-btn1--size-l">
        <span class="c-btn__inner d-flex align-items-center">
          {{
            Icon.content({
              "className": ["c-icon-size-md"],
              "iconFamily": "icozaux1",
              "iconName": "menu-close"
            })
          }}
          <span class="c-btn__label ps-2">Invia la richiesta</span>
          </span>
              <!-- .c-btn__inner -->
        </a>

        <br/>
        <br/>


    </div>
  </div>

{% endblock %}

{% block foot_js %}
  <script defer src="../assets/js/general.bundle.js"></script>
{% endblock %}
